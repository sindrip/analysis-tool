@using WebApplication.Data

<div class="my-5">
    <h2>@Title</h2>
    <table class="table">
    <thead class="thead-light">
        <tr>
            <th>Node</th>
            <th>Entry</th>
            <th>Exit</th>
        </tr>
    </thead>
    <tbody>
        @if(Results.Count > 0)
        {
            @foreach (var item in Results)
            {
                <tr>
                    <td>@item.Label</td>
                    <td>
                    @foreach(var entry in item.NodeEntry) {
                        @((MarkupString)entry.ToString())
                    }
                    </td>
                    <td>
                    @foreach(var exit in item.NodeExit) {
                        @((MarkupString)exit.ToString())
                    }
                    </td>
                </tr>
            }
        }
    </tbody>
    </table>
</div>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public List<AnalysisResult> Results { get; set; }

}
